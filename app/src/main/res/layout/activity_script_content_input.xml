<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    >


    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:id="@+id/sctitlevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        >

        <TextView
            android:id="@+id/exitBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="╳"
            android:textColor="@color/mainColorWhite"
            android:textSize="16.2sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="스크립트 등록"
            android:textColor="@color/mainColorWhite"
            android:textSize="16.2sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/mainColorWhite"
            android:textSize="9pt"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/sctitlevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15dp"
        android:id="@+id/text_script"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스크립트"
        android:textColor="@color/mainColorWhite"
        />

    <EditText
        android:textColor="@color/mainColorWhite"
        android:textColorHint="#fefeff"
        android:id="@+id/script_content"
        android:textSize="13dp"
        android:hint="발표시 사용할 발표대폰을 입력해주세요."
        app:layout_constraintTop_toBottomOf="@+id/text_script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <TextView
        android:layout_marginTop="38dp"
        android:id="@+id/start_textView"
        app:layout_constraintTop_toBottomOf="@+id/script_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작"
        android:textSize="15dp"
        android:textColor="@color/mainColorWhite"
        />

    <LinearLayout
        android:id="@+id/script_StartTimePicker"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/start_textView">

        <NumberPicker
            android:id="@+id/start_picker_hour"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            />
        <NumberPicker
            android:id="@+id/start_picker_minute"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            />
        <NumberPicker
            android:id="@+id/start_picker_second"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
    <TextView
        android:textSize="15dp"
        android:layout_marginTop="38dp"
        android:id="@+id/end_textView"
        app:layout_constraintTop_toBottomOf="@+id/script_StartTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료"
        android:textColor="@color/mainColorWhite"
        />
    <LinearLayout
        android:id="@+id/script_EndTimePicker"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/end_textView">

        <NumberPicker
            android:id="@+id/end_picker_hour"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            />
        <NumberPicker
            android:id="@+id/end_picker_minute"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            />
        <NumberPicker
            android:id="@+id/end_picker_second"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/kp_next_prev_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/popup_btn"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/sc_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="확인"
            android:textColor="@color/mainColor"
            android:textSize="8pt"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
