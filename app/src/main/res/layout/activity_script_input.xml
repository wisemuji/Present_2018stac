<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ScriptInputActivity"
    android:background="@color/mainColorWhite"
    >

    <!--header-->
    <LinearLayout
        android:layout_marginTop="25dp"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor"
        app:layout_constraintBottom_toTopOf="@+id/inforScript"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/exitBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="╳"
            android:textColor="@color/mainColor"
            android:textSize="14.7dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="스크립트 목록"
            android:textColor="@color/mainColor"
            android:textSize="14.7dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/mainColorWhite"
            android:textSize="9pt"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout4"
        android:id="@+id/inforScript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/script_infor"
        android:textColor="@color/mainColor"
        android:textSize="11.8sp"
        />


    <ScrollView
        android:fadeScrollbars="true"
        android:scrollbarFadeDuration="300"
        android:scrollbarDefaultDelayBeforeFade="1000"
        android:layout_marginTop="18dp"
        android:scrollbars="none"
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/bgcolor"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/inforScript">

        <ListView
            android:scrollbars="none"
            android:id="@+id/script_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/mainColorWhite"
            android:dividerHeight="1dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            >

        </ListView>

    </ScrollView>

    <!--footer-->
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/mainColor"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/script_prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="이전"
            android:textColor="@color/mainColorWhite"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/script_next_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="다음"
            android:textColor="@color/mainColorWhite"
            android:textSize="8pt"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>