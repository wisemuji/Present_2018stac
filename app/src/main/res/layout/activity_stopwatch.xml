<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@color/bgcolor"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/exitBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="×"
            android:textColor="@color/mainColor"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="새 PT 제작"
            android:textColor="@color/mainColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/mainColor"
            android:textSize="9pt"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:text="PT 제목"
        android:textColor="@color/mainColor"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/input_title"
        app:layout_constraintStart_toStartOf="@+id/input_title"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12" />

    <EditText
        android:layout_width="0dp"
        android:id="@+id/input_title"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:hint="제목을 입력해주세요"
        android:textColor="@color/mainColor"
        android:textColorHint="@color/mainColorLight"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="315dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="PT 시간"
        android:textColor="@color/mainColor"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/stopwatch_next_btn"
        app:layout_constraintStart_toStartOf="@+id/timePicker"
        app:layout_constraintTop_toBottomOf="@+id/input_title" />

    <!--<TimePicker-->
        <!--android:id="@+id/timePicker"-->
        <!--style="@style/TimePickerTheme"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_marginBottom="39dp"-->
        <!--android:layout_marginTop="23dp"-->
        <!--android:timePickerMode="spinner"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="@+id/textView2" />-->


    <RelativeLayout
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView">

        <RelativeLayout
            android:id="@+id/relative"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mainColorDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="2dp"
                android:background="@color/mainColorDark"/>

        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/mainColorDark"
                android:gravity="center"
                android:text="시간"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/mainColorDark"
                android:gravity="center"
                android:text="분"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/mainColorDark"
                android:gravity="center"
                android:text="초"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text=":"
                    />
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text=":"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text=":"
                    />
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text=":"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text=":"
                    />
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainColorLight"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text=":"
                    />

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/number_pickers"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <NumberPicker
                android:id="@+id/picker_hour"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:fadeScrollbars="false"
                />
            <NumberPicker
                android:id="@+id/picker_minute"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:fadeScrollbars="false"
                />
            <NumberPicker
                android:id="@+id/picker_second"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:fadeScrollbars="false"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/stopwatch_next_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/mainColor"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--<TextView-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center_horizontal|center_vertical"-->
        <!--android:text="이전"-->
        <!--android:textSize="8pt"-->
        <!--android:textStyle="bold"-->
        <!--android:textColor="@color/mainColor"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="다음"
            android:textColor="@color/mainColorWhite"
            android:textSize="8pt"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
