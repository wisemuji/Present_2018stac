<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".activity.ScriptInputActivity">

    <LinearLayout
        android:id="@+id/titleLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/exitBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="×"
            android:textColor="@color/mainColor"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="발표세팅"
            android:textColor="@color/mainColor"
            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/mainColorWhite"
            android:textSize="9pt"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:orientation="vertical"
        android:id="@+id/phoneLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleLinear"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="핸드폰"
            android:textStyle="bold"
            android:textSize="8pt"
            android:textColor="@color/mainColor"
            android:layout_marginBottom="7sp"
            />

        <LinearLayout
            android:id="@+id/setting_time"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="30"
                >

                <TextView
                    android:id="@+id/time_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="시간 표시"
                    android:textColor="@color/mainColor"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/setting_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="꺼진 화면에 발표 시간 표시 "
                    android:textColor="@color/mainColor"
                    android:textSize="7pt" />
            </LinearLayout>

            <CheckBox
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:id="@+id/setting_check1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mainColor" />


        <LinearLayout
            android:id="@+id/setting_script"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="30"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="스크립트 표시"
                    android:textColor="@color/mainColor"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/setting_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="꺼진 화면에 스크립트 표시 "
                    android:textColor="@color/mainColor"
                    android:textSize="7pt" />

            </LinearLayout>

            <CheckBox
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:id="@+id/setting_check2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mainColor" />





        <LinearLayout
            android:id="@+id/setting_vib"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="30"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="진동"
                    android:textColor="@color/mainColor"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/setting_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="핸드폰으로 진동 주기 "
                    android:textColor="@color/mainColor"
                    android:textSize="7pt" />

            </LinearLayout>
            <CheckBox
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:id="@+id/setting_check3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/mainColor" />

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15sp"
        android:orientation="vertical"
        android:id="@+id/smartLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneLinear"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스마트워치"
            android:textStyle="bold"
            android:textSize="8pt"
            android:textColor="@color/mainColor"
            android:layout_marginBottom="7sp"
            />


        <LinearLayout
            android:id="@+id/setting_watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="30"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="진동"
                    android:textColor="@color/mainColor"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="스마트워치로 진동주기"
                    android:textColor="@color/mainColor"
                    android:textSize="7pt" />

            </LinearLayout>

            <CheckBox
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:id="@+id/setting_check4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/mainColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    </LinearLayout>



    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/linearLayout14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="이전"
            android:textColor="@color/mainColorWhite"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setting_next_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="다음"
            android:textColor="@color/mainColorWhite"
            android:textSize="8pt"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>