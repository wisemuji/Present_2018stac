<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:fontFamily">@font/spoqa_han_sans_bold</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:headerBackground">#ffffff</item>
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersInnerTextColor">#ffffff</item>
        <item name="android:numbersSelectorColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">#ffffff</item>
        <item name="android:amPmTextColor">#ffffff</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/mainColorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberPickerText2">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/mainColorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--<declare-styleable name="mapStyle"><attr name="layout_width"/><attr name="layout_height"/><attr name="layout_weight"/></declare-styleable>-->

</resources>
